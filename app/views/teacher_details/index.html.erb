<p id="notice"><%= notice %></p>

<h1>Listing Teacher Details</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Full name</th>
      <th>Gender</th>
      <th>Nationality</th>
      <th>Subjects</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teacher_details.each do |teacher_detail| %>
      <tr>
        <td><%= link_to (image_tag teacher_detail.image.url(:thumb)), teacher_detail %></td>
        <td><%= link_to (teacher_detail.full_name), teacher_detail %></td>
        <td><%= teacher_detail.gender %></td>
        <td><%= teacher_detail.nationality %></td>
        <td><%= teacher_detail.subjects %></td>
      </tr>
    <% end %>
  </tbody>
</table>

